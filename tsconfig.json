{
	"compilerOptions": {
		"outDir": "./dist",
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"types": ["jest"],
		"esModuleInterop": true,
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"paths": {
			"src/*": ["./src/*"],
			"test/*": ["./test/*"]
		}
	},
	"include": ["src/**/*.ts"],
	"exclude": ["test/**/*.ts", "node_modules", "dist"]
}
